@model EntityLayer.Concrete.Address

@{
    ViewData["Title"] = "EditAdress";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h4>Adres Güncelleme</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditAdress">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AddressID" />
            <div class="form-group">
                <label asp-for="Description1" class="control-label">Açıklama 1</label>
                <input asp-for="Description1" class="form-control" />
                <span asp-validation-for="Description1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description2" class="control-label">Açıklama 2</label>
                <input asp-for="Description2" class="form-control" />
                <span asp-validation-for="Description2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description3" class="control-label">Açıklama 3</label>
                <input asp-for="Description3" class="form-control" />
                <span asp-validation-for="Description3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description4" class="control-label">Açıklama 4</label>
                <input asp-for="Description4" class="form-control" />
                <span asp-validation-for="Description4" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MapInfo" class="control-label">Harita Konumu</label>
                <input asp-for="MapInfo" class="form-control" />
                <span asp-validation-for="MapInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-info">Listeye Geri Dön</a>
</div>

