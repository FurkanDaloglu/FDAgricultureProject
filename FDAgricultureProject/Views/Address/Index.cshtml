@model IEnumerable<Address>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Adres</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Açıklama 1
            </th>
            <th>
                Açıklama 2
            </th>
            <th>
                Açıklama 3
            </th>
            <th>
                Açıklama 4
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description4)
                </td>
                <td>
                    <a asp-action="EditAdress" asp-route-id="@item.AddressID" class="btn btn-outline-warning">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
