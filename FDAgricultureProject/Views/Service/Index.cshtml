@model IEnumerable<Service>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Ürünler</h1>

<p>
    <a asp-action="AddService" class="btn btn-outline-primary">Yeni Hizmet Ekle</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Başlık
            </th>
            <th>
                Açıklama
            </th>
            <th>
                Resim
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                <a asp-action="EditService" asp-route-id="@item.ServiceID" class="btn btn-outline-warning">Güncelle</a> |
                <a asp-action="DeleteService" asp-route-id="@item.ServiceID" class="btn btn-outline-danger">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
