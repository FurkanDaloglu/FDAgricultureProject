@model EntityLayer.Concrete.Contact

@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <h4>Mesaj Ayrıntı</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Adı Soyadı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Mail Adresi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mail)
        </dd>
        <dt class = "col-sm-2">
            Mesaj
        </dt>
        <dd class = "col-sm-10">
            @* @Html.DisplayFor(model => model.Message) *@
            <textarea class="form-control" cols="5" rows="20" asp-for="Message" readonly></textarea>
        </dd>
        <dt class = "col-sm-2">
            Tarih
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-info">Listeye Geri Dön</a>
</div>
